{
  "manifest_version": 2,

  "name": "Image Saver",
  "description": "This extension allows you to save multiple images from one website to the same folder.",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "downloads"
  ],

	"commands": {
	  	"saveImage": {
			"suggested_key": {
				"windows": "Ctrl+Shift+S",
	  			"default": "Ctrl+Shift+S"
			},
			"description": "saves last clicked image",
			"global": true
		}
	},

	"background": {
		"scripts": ["bg.js"]
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["library/jquery-2.1.4.js", "content.js"]
		}
	],



  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  
  "icons": { "64": "icon.png"
  }
}